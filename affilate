<body>
  <div class="nav">
    <div class="nav-inner">
      <div class="brand"><div class="brand-badge">AI</div> AI Concierge Network</div>
      <div class="nav-links">
        <a href="#home" onclick="route('home')">Home</a>
        <a href="#chatgpt" onclick="route('chatgpt')">ChatGPT</a>
        <a href="#replit" onclick="route('replit')">Replit</a>
        <a href="#github" onclick="route('github')">GitHub</a>
        <a href="#stripe" onclick="route('stripe')">Stripe</a>
        <a href="#gohighlevel" onclick="route('gohighlevel')">GHL</a>
      </div>
    </div>
  </div>  <main id="app"></main>
  <div class="marble-floor"></div>  <script>
    // ===== CONFIG =====
    const CONFIG = {
      affiliate: {
        chatgpt: "https://openai.com/affiliates?ref=YOUR_ID",
        replit:  "https://replit.com/@YOUR_ID?upgrade=pro",
        github:  "https://github.com/features/copilot?ref=YOUR_ID",
        stripe:  "https://dashboard.stripe.com/register?ref=YOUR_ID",
        gohighlevel: "https://www.gohighlevel.com/?fp_ref=YOUR_ID"
      },
      webhook: {
        // Optional: capture leads to your CRM via webhook or GHL form action
        url: "",
      }
    };

    // ===== UTIL =====
    const el = (h, cls = '', html = '') => { const x = document.createElement(h); if(cls) x.className = cls; if(html) x.innerHTML = html; return x; };
    const app = document.getElementById('app');

    // ===== PAGES =====
    function Home(){
      const wrap = el('div');
      // Hero
      const hero = el('section','hero');
      hero.innerHTML = `
        <div class="hero-inner">
          <div class="hero-card">
            <div class="pill">Executive Suite</div>
            <h1 class="h1">Your Luxury AI Concierge Suite</h1>
            <p class="sub">A premium affiliate hub that sells itself. Marble floors. Gold accents. City‑view confidence. Deploy in minutes on GitHub Pages.</p>
            <div class="cta-row">
              <button class="btn" onclick="route('chatgpt')">Activate ChatGPT Concierge</button>
              <a class="btn secondary" href="#replit" onclick="route('replit')">Explore Replit Suite</a>
            </div>
          </div>
          <div class="skyline" aria-hidden="true"></div>
        </div>`;

      // Value cards
      const grid = el('section','grid');
      grid.innerHTML = `
        <div class="card"><h3>Concierge Bots</h3><p>Each sub‑hub has a selling chatbot that educates, qualifies, and routes to your affiliate link.</p></div>
        <div class="card"><h3>Lead Capture</h3><p>Built‑in forms push contacts to your CRM. Preloaded 7‑day email sequence model.</p></div>
        <div class="card"><h3>Analytics Ready</h3><p>GA4 + Meta Pixel hooks. Track CTA clicks, chat engagement, and conversions.</p></div>`;

      // Hubs
      const hubs = el('section','hubs');
      hubs.innerHTML = `
        <h2>Executive Sub‑Hubs</h2>
        <div class="hub-list">
          ${['chatgpt','replit','github','stripe','gohighlevel'].map(name=>`
            <div class="hub" onclick="route('${name}')">
              <div class="mini">${name.slice(0,2).toUpperCase()}</div>
              <div style="font-weight:700">${name.toUpperCase()}</div>
              <div class="sub" style="font-size:13px; color:var(--muted)">Open concierge</div>
            </div>`).join('')}
        </div>`;

      // Footer
      const foot = el('footer');
      foot.innerHTML = `
        <div class="pill">Deployment</div>
        <p style="margin-top:8px">Clone this single file as <code>index.html</code> into a GitHub repo and enable GitHub Pages. Replace <code>YOUR_ID</code> with your affiliate IDs. Connect your CRM webhook if desired.</p>`;

      wrap.append(hero, grid, hubs, foot);
      return wrap;
    }

    function SubHub({brand, title, pitch, features}){
      const wrap = el('div','view');
      const panel = el('div','panel');

      // LEFT: Product copy + CTA + lead capture
      const left = el('div','card');
      left.innerHTML = `
        <div class="pill">${brand.toUpperCase()} Concierge</div>
        <h2 style="margin:10px 0 6px">${title}</h2>
        <p class="sub" style="margin:0 0 16px">${pitch}</p>
        <ul style="margin:0 0 18px 16px">${features.map(f=><li style="margin:6px 0">${f}</li>).join('')}</ul>
        <div class="cta-row">
          <a class="btn" href="${CONFIG.affiliate[brand]}" target="_blank" rel="noopener">Get ${brand.toUpperCase()} — Affiliate</a>
          <button class="btn secondary" onclick="document.getElementById('optin-${brand}').scrollIntoView({behavior:'smooth'})">Get Free Guide</button>
        </div>
        <div id="optin-${brand}" class="field" style="margin-top:18px">
          <label for="email-${brand}">Email for the 7‑day ${brand.toUpperCase()} ROI sequence</label>
          <form onsubmit="return lead(event, '${brand}')">
            <input id="email-${brand}" name="email" type="email" required placeholder="you@company.com" />
            <input name="brand" type="hidden" value="${brand}" />
            <button class="btn" type="submit" style="margin-top:10px">Send My Guide</button>
          </form>
          <small class="sub">No spam. One‑click unsubscribe.</small>
        </div>`;

      // RIGHT: Chatbot
      const right = el('div','chat');
      right.innerHTML = `
        <div class="chat-head"><div class="badge">AI</div><div style="font-weight:700">${title} — Executive Bot</div></div>
        <div class="chat-log" id="log-${brand}"></div>
        <div class="chat-ctr">
          <input id="in-${brand}" placeholder="Ask about pricing, features, ROI…" onkeydown="if(event.key==='Enter'){send('${brand}')}">
          <button class="btn" onclick="send('${brand}')">Ask</button>
        </div>`;

      panel.append(left, right);
      wrap.append(panel);

      // seed chat
      setTimeout(()=>seed(brand), 0);
      return wrap;
    }

    // ===== ROUTER =====
    function route(name){
      window.location.hash = name === 'home' || !name ? '' : #${name};
      render();
    }

    function render(){
      const hash = (location.hash||'').replace('#','');
      app.innerHTML = '';
      if(!hash || hash === 'home') return app.appendChild(Home());
      if(hash === 'chatgpt') return app.appendChild(SubHub({
        brand:'chatgpt',
        title:'ChatGPT Premium Productivity Suite',
        pitch:'Faster answers, better outputs, compounding time savings. Sell the upgrade that pays for itself.',
        features:['Luxury landing copy generator','Sales and email draft in seconds','Advanced data tools for power users','Executive prompt packs included']
      }));
      if(hash === 'replit') return app.appendChild(SubHub({
        brand:'replit',
        title:'Replit Pro — Build and Ship Faster',
        pitch:'Launch full‑stack apps from the browser. AI coding, instant hosting, zero‑ops.',
        features:['Ghostwriter AI coding','One‑click deploy','Templates for SaaS and APIs','Team collaboration']
      }));
      if(hash === 'github') return app.appendChild(SubHub({
        brand:'github',
        title:'GitHub Copilot — AI Pair Programmer',
        pitch:'Write less, build more. Enterprise‑grade coding acceleration with in‑editor intelligence.',
        features:['Context‑aware suggestions','Test scaffolding','Refactor guidance','IDE integrations']
      }));
      if(hash === 'stripe') return app.appendChild(SubHub({
        brand:'stripe',
        title:'Stripe — Monetize Instantly',
        pitch:'Payments, subscriptions, and global payouts for your AI products and services.',
        features:['Checkout links in minutes','Billing + tax automation','Analytics and risk tools','Partner referral upside']
      }));
      if(hash === 'gohighlevel') return app.appendChild(SubHub({
        brand:'gohighlevel',
        title:'GoHighLevel — CRM + Automations',
        pitch:'Capture, nurture, and close with a white‑label ready SMB automation stack.',
        features:['Funnels and forms','SMS + email automations','Pipelines and calendars','Client accounts and reporting']
      }));
      // fallback
      app.appendChild(Home());
    }

    // ===== CHATBOT ENGINE (no‑backend, scripted to sell) =====
    const scripts = {
      chatgpt:[
        {q:/price|cost|plus|pro/i, a:() => ChatGPT Plus starts at a low monthly fee. Exec takeaway: one saved hour covers the cost. <a href="${CONFIG.affiliate.chatgpt}" target="_blank" rel="noopener">Upgrade via affiliate</a>.},
        {q:/benefit|why|roi|value/i, a:() => Speed, accuracy, and better outputs. Draft emails, proposals, and reports in minutes. <a href="${CONFIG.affiliate.chatgpt}" target="_blank" rel="noopener">Start your upgrade</a>.},
        {q:/data|analysis|pdf|csv|tools/i, a:() => Advanced tools handle files and data. Ideal for executives working across docs and dashboards.},
      ],
      replit:[
        {q:/host|deploy|publish/i, a:() => Replit Pro deploys from the browser. No servers to manage. <a href="${CONFIG.affiliate.replit}" target="_blank">Try Pro</a>.},
        {q:/ai|ghost|code/i, a:() => Ghostwriter suggests code, fixes, and tests. It accelerates shippable features.},
      ],
      github:[
        {q:/copilot|suggest|autocomplete/i, a:() => Copilot provides context‑aware suggestions as you type. <a href="${CONFIG.affiliate.github}" target="_blank">Activate Copilot</a>.},
      ],
      stripe:[
        {q:/pay|checkout|subscription|billing/i, a:() => Stripe Checkout links and Billing make monetization fast. <a href="${CONFIG.affiliate.stripe}" target="_blank">Create an account</a>.},
      ],
      gohighlevel:[
        {q:/crm|funnels|automation|sms|email/i, a:() => HighLevel unifies funnels, SMS, email, and calendars. <a href="${CONFIG.affiliate.gohighlevel}" target="_blank">Get access</a>.},
      ]
    };

    function seed(brand){
      const log = document.getElementById(log-${brand});
      if(!log) return;
      msg(log,'bot',Welcome to the ${brand.toUpperCase()} Executive Suite. Ask about features, ROI, or pricing.);
    }
    function msg(log, who, text){
      const m = el('div', msg ${who}); m.innerHTML = text; log.appendChild(m); log.scrollTop = log.scrollHeight;
    }
    function send(brand){
      const input = document.getElementById(in-${brand});
      const log = document.getElementById(log-${brand});
      const text = (input.value||'').trim(); if(!text) return; input.value='';
      msg(log,'me', text);
      // scripted match
      const set = scripts[brand]||[];
      const found = set.find(r=>r.q.test(text));
      const answer = found ? found.a() : Here is the executive summary: This suite saves hours weekly and compounds ROI. <a href="${CONFIG.affiliate[brand]}" target="_blank" rel="noopener">Proceed to ${brand.toUpperCase()}</a>.;
      setTimeout(()=>msg(log,'bot', answer), 250);
      // track
      track('chat_ask', {brand, text});
    }

    // ===== LEAD CAPTURE =====
    async function lead(e, brand){
      e.preventDefault();
      const fd = new FormData(e.target);
      const payload = Object.fromEntries(fd.entries());
      try{
        if(CONFIG.webhook.url){
          await fetch(CONFIG.webhook.url, {method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify(payload)});
        }
        alert('Guide queued. Check your inbox.');
        track('lead', {brand, email: payload.email});
      }catch(err){
        console.error(err); alert('Network issue. Try again.');
      }
      return false;
    }

    // ===== TRACKING HOOKS (stubbed) =====
    function track(event, data){
      // Stub. Replace with GA4 gtag or Meta Pixel as needed.
      console.log('[track]', event, data);
    }

    // Init
    window.addEventListener('hashchange', render);
    render();
  </script></body>
</html>
